{
    "terminal.integrated.env.linux": {
        "EXT_PATH": "${workspaceFolder}/cmake-out:${workspaceFolder}/third-party/flatbuffers/cmake-out:${workspaceFolder}/_demos/bin",
        "EXT_PYTHONPATH": "${workspaceFolder}",
    },
    "terminal.integrated.env.osx": {
        "EXT_PATH": "${workspaceFolder}/cmake-out:${workspaceFolder}/third-party/flatbuffers/cmake-out:${workspaceFolder}/_demos/bin",
        "EXT_PYTHONPATH": "${workspaceFolder}",
    },
    "search.exclude": {
        "**/cmake-out": true,
        "**/buck-out": true,
        "**/third-party": true
    },
    "files.watcherExclude": {
        "**/cmake-out": true,
        "**/buck-out": true,
        "**/third-party": true
    },
    "cmake.useCMakePresets": "always",
    "clangd.arguments": [
        // "-log=verbose",
        "-pretty",
        "--background-index",
        "--enable-config",
        "--all-scopes-completion",
        "--compile-commands-dir=${workspaceFolder}/cmake-out"
    ],
    "python.analysis.extraPaths": [
        // "${workspaceFolder}",
    ],
    "python.analysis.exclude": [
        "${workspaceFolder}",
    ],
}
